<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="dmitry.sayushev">

        <createSequence sequenceName="wallets_id_seq"
                        dataType="bigint"
                        incrementBy="1"
                        startValue="4"
                        minValue="1"
                        catalogName=""/>

        <createTable tableName="wallets">
            <column name="id" type="BIGINT" defaultValueSequenceNext="wallets_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_WALLETS"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="balance" type="NUMERIC(12, 2)" defaultValue="0.00">
                <constraints checkConstraint="balance >= 0"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="dmitry.sayushev">

        <createSequence sequenceName="user_id_seq"
                        dataType="bigint"
                        incrementBy="1"
                        startValue="1"
                        minValue="1"/>

        <createTable tableName="users">
            <column name="id" type="BIGINT" defaultValueSequenceNext="user_id_seq">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_USERS"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>


</databaseChangeLog>
